<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/near_bg"
    android:id="@+id/add_profile"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--파란선을 제외한 큰 레이아웃-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <!--관심사 목록-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="#797e86"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/keyword2"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        />
                    <TextView
                    android:id="@+id/keyword1"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@id/keyword2"
                    />

                <TextView
                    android:id="@+id/keyword3"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_toRightOf="@id/keyword2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:textColor="#000000"
                    />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/keyword4"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginLeft="96dp"
                        />

                    <TextView
                        android:id="@+id/keyword5"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="96dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        />

                </RelativeLayout>

            </LinearLayout>

            <!--키워드선택버튼-->

            <ImageView
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:id="@+id/setting_interests"
                />

            <!-- 프로필사진 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:id="@+id/my_profile_image"/>

                <ImageView
                    android:id="@+id/edit_profile_image"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="180dp"
                    android:layout_gravity="right"
                    />
            </FrameLayout>
            <!-- 이름 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:src="@drawable/my_profile_toggle_off"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:hint="이름"
                    android:maxLength="5"
                    android:background="@drawable/edit_text_color"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColorHint="#DDDDDD"
                    android:textColor="#3e3e3e"
                    android:id="@+id/textview_name"
                    android:textCursorDrawable="@drawable/color_cursor"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <!-- 전화번호 -->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/my_profile_toggle_off"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="전화번호"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColorHint="#DDDDDD"
                    android:textColor="#3e3e3e"
                    android:background="@drawable/edit_text_color"
                    android:id="@+id/textview_phonenumber"
                    android:textCursorDrawable="@drawable/color_cursor"
                />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/my_profile_toggle_off"/>
                <!-- 자기소개 -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="자기소개"
                    android:ems="60"
                    android:maxLength="60"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColorHint="#DDDDDD"
                    android:textColor="#3e3e3e"
                    android:id="@+id/textview_selfintro"
                    android:background="@drawable/edit_text_color"
                    android:textCursorDrawable="@drawable/color_cursor"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/my_profile_toggle_off"/>
                <!-- sns링크 -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="SNS링크"
                    android:maxLength="30"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColorHint="#DDDDDD"
                    android:textColor="#3e3e3e"
                    android:background="@drawable/edit_text_color"
                    android:id="@+id/textview_sns1"
                    android:textCursorDrawable="@drawable/color_cursor"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/my_profile_toggle_off"
                    android:visibility="invisible" />
                <!-- sns링크 -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="SNS링크"
                    android:maxLength="30"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColorHint="#DDDDDD"
                    android:textColor="#3e3e3e"
                    android:background="@drawable/edit_text_color"
                    android:id="@+id/textview_sns2"
                    android:textCursorDrawable="@drawable/color_cursor"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/my_profile_toggle_off"
                    android:visibility="invisible" />
                <!-- sns링크 -->
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:hint="SNS링크"
                    android:maxLength="30"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColorHint="#DDDDDD"
                    android:textColor="#3e3e3e"
                    android:background="@drawable/edit_text_color"
                    android:id="@+id/textview_sns3"
                    android:textCursorDrawable="@drawable/color_cursor"/>


            </LinearLayout>

            <!--동영상-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="15dp">

                <ImageView
                    android:id="@+id/image_video"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>